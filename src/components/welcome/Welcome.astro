<script>
	import { gsap } from 'gsap';
	import { ScrollTrigger } from 'gsap/ScrollTrigger';

	// Register ScrollTrigger plugin
	gsap.registerPlugin(ScrollTrigger);

	// Wait for DOM to be ready
	document.addEventListener('DOMContentLoaded', () => {
		// Initial setup - hide elements
		gsap.set(['.title-word', '.subtitle-line', '.description-container', '.tech-item', '.scroll-indicator'], {
			opacity: 0,
			y: 50
		});

		gsap.set('.floating-element', {
			opacity: 0,
			scale: 0.5
		});

		// Hero entrance animation
		const heroTl = gsap.timeline({ delay: 0.5 });

		heroTl.to('.title-word', {
			opacity: 1,
			y: 0,
			duration: 1,
			stagger: 0.2,
			ease: "power3.out"
		})
		.to('.subtitle-line', {
			opacity: 1,
			scaleX: 1,
			duration: 0.8,
			ease: "power2.out"
		}, "-=0.5")
		.to('.description-container', {
			opacity: 1,
			y: 0,
			duration: 0.8,
			ease: "power2.out"
		}, "-=0.3")
		.to('.tech-item', {
			opacity: 1,
			y: 0,
			duration: 0.6,
			stagger: 0.1,
			ease: "back.out(1.7)"
		}, "-=0.4")
		.to('.scroll-indicator', {
			opacity: 1,
			y: 0,
			duration: 0.6,
			ease: "power2.out"
		}, "-=0.2");

		// Floating elements animation
		gsap.to('.floating-element', {
			opacity: 0.3,
			scale: 1,
			duration: 2,
			stagger: 0.3,
			ease: "power2.out",
			delay: 1
		});

		// Continuous floating animation
		gsap.to('.floating-element:nth-child(1)', {
			y: -20,
			duration: 3,
			repeat: -1,
			yoyo: true,
			ease: "power1.inOut"
		});

		gsap.to('.floating-element:nth-child(2)', {
			y: 15,
			duration: 4,
			repeat: -1,
			yoyo: true,
			ease: "power1.inOut",
			delay: 1
		});

		gsap.to('.floating-element:nth-child(3)', {
			y: -10,
			duration: 5,
			repeat: -1,
			yoyo: true,
			ease: "power1.inOut",
			delay: 2
		});

		// Scroll indicator animation
		gsap.to('.scroll-dot', {
			y: 15,
			duration: 1.5,
			repeat: -1,
			yoyo: true,
			ease: "power2.inOut",
			delay: 2
		});

		// Features Section ScrollTrigger
		gsap.fromTo('.section-title', {
			opacity: 0,
			y: 60
		}, {
			opacity: 1,
			y: 0,
			duration: 1,
			ease: "power3.out",
			scrollTrigger: {
				trigger: '#features',
				start: 'top 80%',
				end: 'top 50%',
				toggleActions: 'play none none reverse'
			}
		});

		gsap.fromTo('.section-subtitle', {
			opacity: 0,
			y: 40
		}, {
			opacity: 1,
			y: 0,
			duration: 0.8,
			ease: "power2.out",
			scrollTrigger: {
				trigger: '#features',
				start: 'top 75%',
				end: 'top 45%',
				toggleActions: 'play none none reverse'
			}
		});

		gsap.fromTo('.feature-card', {
			opacity: 0,
			y: 60,
			scale: 0.9
		}, {
			opacity: 1,
			y: 0,
			scale: 1,
			duration: 0.8,
			stagger: 0.2,
			ease: "power2.out",
			scrollTrigger: {
				trigger: '.features-grid',
				start: 'top 80%',
				end: 'top 30%',
				toggleActions: 'play none none reverse'
			}
		});

		// Tech Stack Section ScrollTrigger
		gsap.fromTo('.tech-title', {
			opacity: 0,
			y: 60
		}, {
			opacity: 1,
			y: 0,
			duration: 1,
			ease: "power3.out",
			scrollTrigger: {
				trigger: '#tech-stack',
				start: 'top 80%',
				end: 'top 50%',
				toggleActions: 'play none none reverse'
			}
		});

		gsap.fromTo('.tech-subtitle', {
			opacity: 0,
			y: 40
		}, {
			opacity: 1,
			y: 0,
			duration: 0.8,
			ease: "power2.out",
			scrollTrigger: {
				trigger: '#tech-stack',
				start: 'top 75%',
				end: 'top 45%',
				toggleActions: 'play none none reverse'
			}
		});

		gsap.fromTo('.tech-card', {
			opacity: 0,
			y: 80,
			rotationY: 15
		}, {
			opacity: 1,
			y: 0,
			rotationY: 0,
			duration: 1,
			stagger: 0.3,
			ease: "power2.out",
			scrollTrigger: {
				trigger: '#tech-stack .grid',
				start: 'top 80%',
				end: 'top 30%',
				toggleActions: 'play none none reverse'
			}
		});

		// CTA Section ScrollTrigger
		gsap.fromTo('.cta-title', {
			opacity: 0,
			y: 60
		}, {
			opacity: 1,
			y: 0,
			duration: 1,
			ease: "power3.out",
			scrollTrigger: {
				trigger: '#cta',
				start: 'top 80%',
				end: 'top 50%',
				toggleActions: 'play none none reverse'
			}
		});

		gsap.fromTo('.cta-description', {
			opacity: 0,
			y: 40
		}, {
			opacity: 1,
			y: 0,
			duration: 0.8,
			ease: "power2.out",
			scrollTrigger: {
				trigger: '#cta',
				start: 'top 75%',
				end: 'top 45%',
				toggleActions: 'play none none reverse'
			}
		});

		gsap.fromTo(['.cta-button', '.cta-button-secondary'], {
			opacity: 0,
			y: 40,
			scale: 0.9
		}, {
			opacity: 1,
			y: 0,
			scale: 1,
			duration: 0.8,
			stagger: 0.2,
			ease: "back.out(1.7)",
			scrollTrigger: {
				trigger: '.cta-content',
				start: 'top 70%',
				end: 'top 40%',
				toggleActions: 'play none none reverse'
			}
		});

		// Parallax effects
		gsap.to('.floating-element', {
			y: -100,
			ease: "none",
			scrollTrigger: {
				trigger: '#welcome-container',
				start: 'top bottom',
				end: 'bottom top',
				scrub: 1
			}
		});

		// Tech stack hover animations
		document.querySelectorAll('.tech-item').forEach(item => {
			item.addEventListener('mouseenter', () => {
				gsap.to(item, {
					scale: 1.05,
					duration: 0.3,
					ease: "power2.out"
				});
			});

			item.addEventListener('mouseleave', () => {
				gsap.to(item, {
					scale: 1,
					duration: 0.3,
					ease: "power2.out"
				});
			});
		});

		// Feature cards hover
		document.querySelectorAll('.feature-card').forEach(card => {
			card.addEventListener('mouseenter', () => {
				gsap.to(card, {
					y: -10,
					duration: 0.3,
					ease: "power2.out"
				});
			});

			card.addEventListener('mouseleave', () => {
				gsap.to(card, {
					y: 0,
					duration: 0.3,
					ease: "power2.out"
				});
			});
		});

		// Tech cards hover
		document.querySelectorAll('.tech-card').forEach(card => {
			card.addEventListener('mouseenter', () => {
				gsap.to(card, {
					scale: 1.02,
					rotationY: -2,
					duration: 0.4,
					ease: "power2.out"
				});
			});

			card.addEventListener('mouseleave', () => {
				gsap.to(card, {
					scale: 1,
					rotationY: 0,
					duration: 0.4,
					ease: "power2.out"
				});
			});
		});

		// Button hover animations
		document.querySelectorAll('.cta-button, .cta-button-secondary').forEach(button => {
			button.addEventListener('mouseenter', () => {
				gsap.to(button, {
					scale: 1.05,
					duration: 0.3,
					ease: "power2.out"
				});
			});

			button.addEventListener('mouseleave', () => {
				gsap.to(button, {
					scale: 1,
					duration: 0.3,
					ease: "power2.out"
				});
			});
		});
	});
</script>

<style>
	.subtitle-line {
		width: 100px;
		transform-origin: left;
		transform: scaleX(0);
	}

	@media (min-width: 640px) {
		.subtitle-line {
			width: 200px;
		}
	}

	.feature-icon, .tech-card {
		transition: transform 0.3s ease;
	}

	.feature-card:hover .feature-icon {
		transform: scale(1.1);
	}

	/* Custom scrollbar */
	:global(html) {
		scroll-behavior: smooth;
	}

	:global(body::-webkit-scrollbar) {
		width: 8px;
	}

	:global(body::-webkit-scrollbar-track) {
		background: #1e293b;
	}

